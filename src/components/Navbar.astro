---
const links = [
  { href: "#demos", label: "Demos" },
  { href: "#testimonials", label: "Testimonials" },
  { href: "#contact", label: "Contact" },
];
---
<header class="border-b border-gray-200">
  <div class="mx-auto max-w-[980px] px-4 py-3">
    <div class="flex items-center justify-between">
      <a href="#" class="text-lg font-semibold tracking-tight">Baldwin Voice</a>

      <!-- Desktlogop -->
      <nav class="hidden gap-6 md:flex">
        {links.map((l) => (
          <a href={l.href} class="text-sm font-medium text-brand-fg/80 hover:text-brand-fg">
            {l.label}
          </a>
        ))}
      </nav>

      <!-- Mobile (no JS) -->
      <details class="md:hidden">
        <summary class="cursor-pointer rounded-md border border-gray-300 px-3 py-1 text-sm">Menu</summary>
        <div class="mt-2 flex flex-col gap-2 rounded-md border border-gray-200 bg-white p-2 shadow-sm">
          {links.map((l) => (
            <a href={l.href} class="rounded px-2 py-1 text-sm text-brand-fg/80 hover:bg-gray-50 hover:text-brand-fg">
              {l.label}
            </a>
          ))}
        </div>
      </details>
    </div>
  </div>
</header>
