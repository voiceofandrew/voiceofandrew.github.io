---
import { ChatBubbleLeftRightIcon } from '@heroicons/react/24/outline';

const { quote, byline, company } = Astro.props as { 
  quote: string; 
  byline?: string; 
  company?: string; 
};
---

<article class="card group hover:shadow-lg transition-all duration-300 relative overflow-hidden">
  <!-- Quote Icon -->
  <div class="absolute top-4 right-4 text-brand-accent/10 group-hover:text-brand-accent/20 transition-colors">
    <ChatBubbleLeftRightIcon className="w-6 h-6" />
  </div>

  <!-- Content -->
  <div class="p-6 pt-12">
    <!-- Quote -->
    <blockquote class="mb-6">
      <p class="text-lg leading-relaxed text-gray-900 font-medium">
        "{quote}"
      </p>
    </blockquote>

    <!-- Author -->
    <footer class="flex items-start space-x-4">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center text-white font-semibold text-sm shadow-lg">
        {byline?.charAt(0) || 'C'}
      </div>
      <div class="flex-1 min-w-0">
        {byline && (
          <div class="font-semibold text-gray-900">{byline}</div>
        )}
        {company && (
          <div class="text-sm text-gray-600">{company}</div>
        )}
      </div>
    </footer>
  </div>

  <!-- Hover Effect -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-accent/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
</article>
