---
const { quote, byline, company } = Astro.props as { 
  quote: string; 
  byline?: string; 
  company?: string; 
};
---

<article class="card group hover:shadow-lg transition-all duration-300 relative overflow-hidden">
  <!-- Quote Icon -->
  <div class="absolute top-6 right-6 text-brand-accent/10 group-hover:text-brand-accent/20 transition-colors">
    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
    </svg>
  </div>

  <!-- Content -->
  <div class="p-6 pt-8">
    <!-- Quote -->
    <blockquote class="mb-6">
      <p class="text-lg leading-relaxed text-gray-900 font-medium">
        "{quote}"
      </p>
    </blockquote>

    <!-- Author -->
    <footer class="flex items-start space-x-4">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-full flex items-center justify-center text-white font-semibold text-sm shadow-lg">
        {byline?.charAt(0) || 'C'}
      </div>
      <div class="flex-1 min-w-0">
        {byline && (
          <div class="font-semibold text-gray-900">{byline}</div>
        )}
        {company && (
          <div class="text-sm text-gray-600">{company}</div>
        )}
      </div>
    </footer>
  </div>

  <!-- Hover Effect -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-accent/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
</article>
