---
import { BriefcaseIcon, BookOpenIcon, MusicalNoteIcon, PhoneIcon, VideoCameraIcon } from '@heroicons/react/24/outline';

const services = [
  {
    icon: BriefcaseIcon,
    title: "Commercial Voice Over",
    description: "Energetic, persuasive, and brand-focused voice over for TV, radio, and digital commercials.",
    features: ["Multiple takes", "Background music", "Sound effects", "Broadcast quality", "Usage rights"]
  },
  {
    icon: VideoCameraIcon,
    title: "YouTube & Video Content",
    description: "Complete video production including voice over, video recording, and editing for YouTube creators.",
    features: ["Voice over", "Audio Syncronization", "On camera performance", "High quality video", "Channel branding"]
  },
  {
    icon: BookOpenIcon,
    title: "Audiobook Narration",
    description: "Clear, engaging narration for educational content, documentaries, and corporate training.",
    features: ["Fiction & Non-fiction", "Character voices", "Emotional depth", "Background music", "Audible Publishing"]
  },
  {
    icon: MusicalNoteIcon,
    title: "Podcast & Audio Content",
    description: "Conversational and engaging voice work for podcasts, interviews, and audio storytelling.",
    features: ["Podcast intros/outros", "Interview hosting", "Audio storytelling", "Character voices"]
  },
  {
    icon: PhoneIcon,
    title: "Audio Editing & Mastering",
    description: "Professional audio editing and mastering to enhance the quality of your audio.",
    features: ["Audio Engineering", "Mastering", "Audio processing", "Audio enhancement", "Audio branding"]
  },
  {
    icon: BriefcaseIcon,
    title: "Custom Voice Over Projects",
    description: "Specialized voice work for unique projects that don't fit standard categories.",
    features: ["Custom project consultation", "Flexible pricing", "Specialized requirements", "Unique applications", "Personalized approach"]
  }
];
---

<section class="py-20 bg-brand-secondary/20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-brand-primary mb-4">Voice Over Services</h2>
      <p class="text-lg text-brand-muted max-w-2xl mx-auto">
        Professional voice over solutions tailored to your specific needs. 
        <br>
        Don't see your project type? 
        <a href="#contact" class="text-brand-accent hover:text-brand-accent-hover font-medium">Let's discuss your custom requirements</a>.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => {
        return (
        <article class="bg-gradient-to-br from-blue-50 to-blue-100 border-2 border-blue-200 rounded-2xl group hover:shadow-xl hover:scale-105 transition-all duration-300 p-8 relative overflow-hidden">
          <!-- Icon -->
          <div class="w-16 h-16 [background:var(--gradient-primary)] rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-200 shadow-lg">
            <service.icon className="w-8 h-8 text-white" />
          </div>

          <!-- Content -->
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-brand-primary group-hover:text-brand-accent transition-colors">
              {service.title}
            </h3>
            <p class="text-brand-muted leading-relaxed">
              {service.description}
            </p>
            
            <!-- Features -->
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center text-sm text-brand-muted">
                  <svg class="w-4 h-4 text-brand-success mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          <!-- Hover Effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none rounded-2xl"></div>
        </article>
        );
      })}
    </div>

  </div>
</section>
