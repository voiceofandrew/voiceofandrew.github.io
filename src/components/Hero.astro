---
import { ArrowRightIcon, EnvelopeIcon, ChevronDownIcon } from '@heroicons/react/24/outline';

const {
  title = "The Voice for Your Project",
  subtitle = "Fast turnarounds. Broadcast-quality audio.",
  description = "Professional voice over services for audiobooks, youtube, commercials, political, e-learning, and more. Available worldwide with 24-hour sample turnaround."
} = Astro.props;
---

<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-secondary via-white to-brand-secondary/50"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(59,130,246,0.15),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(30,64,175,0.15),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(219,234,254,0.2),transparent_60%)]"></div>
  
  <!-- Content -->
  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Side - Image -->
      <div class="order-2 lg:order-1">
        <div class="max-w-md mx-auto lg:mx-0">
          <img 
            src="/images/casual-headshot.jpg" 
            alt="Andrew Baldwin - Professional Voice Over Artist"
            class="w-full h-auto object-cover rounded-2xl shadow-2xl"
            loading="eager"
          />
        </div>
      </div>

      <!-- Right Side - Content -->
      <div class="order-1 lg:order-2 text-center lg:text-left space-y-8">
        <!-- Main Heading -->
        <div class="space-y-6">
          <h1 class="text-responsive-xl font-bold leading-tight">
            <span class="voice-brand">{title}</span>
          </h1>
          <p class="text-responsive-md text-brand-muted max-w-3xl mx-auto lg:mx-0 leading-relaxed">
            {subtitle}
          </p>
          <p class="text-lg text-brand-muted/80 max-w-2xl mx-auto lg:mx-0">
            {description}
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center">
          <a 
            href="#demos" 
            class="btn-primary text-lg px-8 py-4 group"
          >
            Listen to Demos
            <ArrowRightIcon className="w-5 h-5 ml-2 inline-block group-hover:translate-x-1 transition-transform" />
          </a>
          <a 
            href="#contact" 
            class="btn-secondary text-lg px-8 py-4 group"
          >
            Get Custom Sample
            <EnvelopeIcon className="w-5 h-5 ml-2 inline-block group-hover:translate-x-1 transition-transform" />
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-2xl mx-auto lg:mx-0 pt-12">
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-brand-accent">24h</div>
            <div class="text-sm text-brand-muted">Sample Turnaround</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-brand-accent">1000+</div>
            <div class="text-sm text-brand-muted">Projects Completed</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-brand-accent">5â˜…</div>
            <div class="text-sm text-brand-muted">Client Rating</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <a href="#demos" class="block">
      <ChevronDownIcon className="w-6 h-6 text-brand-muted" />
    </a>
  </div>
</section>
