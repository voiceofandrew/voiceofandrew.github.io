---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import AudioCard from "../components/AudioCard.astro";
import Quote from "../components/Quote.astro";
import Services from "../components/Services.astro";
import ContactForm from "../components/ContactForm.astro";
import testimonialsData from "../data/testimonials.json";
import demosData from "../data/demos.json";
import { CheckCircleIcon, ClockIcon, StarIcon } from '@heroicons/react/24/outline';
---
<Layout>
  <Hero />

  <!-- ABOUT -->
  <About />

  <!-- DEMOS -->
  <section id="demos" class="py-20 bg-brand-secondary/30">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-brand-primary mb-4">Voice Over Demos</h2>
        <p class="text-lg text-brand-muted max-w-2xl mx-auto">
          Explore my diverse range of voice over styles. Each demo showcases different tones, 
          pacing, and emotional delivery to match your project needs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {demosData.map((demo) => (
          <AudioCard 
            title={demo.title}
            src={demo.src}
          />
        ))}
      </div>

      <!-- Full Reels CTA -->
      <div class="mt-16 text-center">
        <div class="inline-flex items-center px-6 py-3 bg-white rounded-xl shadow-sm border border-brand-light">
          <svg class="w-5 h-5 text-brand-accent mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
          </svg>
          <span class="text-sm text-brand-muted">Need full reels? </span>
          <a href="#contact" class="text-sm font-medium text-brand-accent hover:text-brand-accent-hover ml-1">
            Request complete demos â†’
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section id="testimonials" class="py-20 bg-gradient-to-br from-brand-secondary via-white to-brand-secondary/50 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(59,130,246,0.15),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(30,64,175,0.15),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(219,234,254,0.2),transparent_60%)]"></div>
    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-brand-primary mb-4">What Clients Say</h2>
        <p class="text-lg text-brand-muted max-w-2xl mx-auto">
          Don't just take my word for it. Here's what industry professionals say about working with me.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {testimonialsData.map((testimonial) => (
          <Quote 
            quote={testimonial.quote}
            byline={testimonial.byline}
            company={testimonial.company}
          />
        ))}
      </div>

      <!-- Trust Indicators -->
      <div class="mt-16 text-center">
        <div class="inline-flex items-center space-x-8 text-sm text-brand-muted">
          <div class="flex items-center space-x-2">
            <CheckCircleIcon className="w-5 h-5 text-brand-success" />
            <span>100% Client Satisfaction</span>
          </div>
          <div class="flex items-center space-x-2">
            <ClockIcon className="w-5 h-5 text-brand-success" />
            <span>24h Sample Turnaround</span>
          </div>
          <div class="flex items-center space-x-2">
            <StarIcon className="w-5 h-5 text-brand-success" />
            <span>Broadcast Quality Audio</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <Services />


  <!-- CONTACT FORM -->
  <section id="contact">
    <ContactForm />
  </section>
</Layout>
